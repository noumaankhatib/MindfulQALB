# MindfulQALB Environment Configuration
# Copy this file to .env and fill in your values
# NEVER commit the .env file to version control

# =============================================================================
# RAZORPAY PAYMENT GATEWAY
# =============================================================================
# Get these from https://dashboard.razorpay.com/app/keys
RAZORPAY_KEY_ID=rzp_test_xxxxxxxxxxxx
RAZORPAY_KEY_SECRET=your_key_secret_here

# =============================================================================
# CAL.COM SCHEDULING
# =============================================================================
# Get API key from https://app.cal.com/settings/developer/api-keys
CALCOM_API_KEY=cal_live_xxxxxxxxxxxx
CALCOM_USERNAME=your_calcom_username

# Event type IDs mapping (JSON format)
# Get IDs from your Cal.com event types
CALCOM_EVENT_TYPE_IDS={"individual":"123456","couples":"123457","family":"123458","free":"123459"}

# =============================================================================
# CORS / SECURITY
# =============================================================================
# Comma-separated list of allowed origins
ALLOWED_ORIGINS=http://localhost:5173,http://localhost:3000,https://mindfulqalb.com,https://www.mindfulqalb.com

# =============================================================================
# ENVIRONMENT
# =============================================================================
NODE_ENV=development

# =============================================================================
# OPTIONAL: RATE LIMITING (for production with Upstash)
# =============================================================================
# Uncomment and configure if using Upstash Redis for distributed rate limiting
# UPSTASH_REDIS_REST_URL=https://xxxx.upstash.io
# UPSTASH_REDIS_REST_TOKEN=your_token_here

# =============================================================================
# OPTIONAL: LOGGING & MONITORING
# =============================================================================
# LOG_LEVEL=info
# SENTRY_DSN=https://xxxx@sentry.io/xxxx
