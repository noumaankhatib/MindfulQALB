# MindfulQALB Frontend Environment Variables
# Copy this file to .env and fill in the values

# ===== BACKEND API (RECOMMENDED FOR PRODUCTION) =====
# Set to "true" to use secure backend API
VITE_USE_BACKEND_API=false

# Backend API URL
VITE_BACKEND_URL=http://localhost:3001/api

# ===== PAYMENT CONFIGURATION =====
# Set to "true" to enable real payments
VITE_PAYMENT_ENABLED=false

# Razorpay (for India) - Only publishable key in frontend
VITE_RAZORPAY_KEY_ID=rzp_test_xxxxxxxxxxxxx

# Stripe (for International) - Only publishable key in frontend
VITE_STRIPE_PUBLISHABLE_KEY=pk_test_xxxxxxxxxxxxx

# ===== CAL.COM CONFIGURATION (DIRECT MODE ONLY) =====
# WARNING: These are exposed in frontend. Use backend API in production!
VITE_CALCOM_API_KEY=
VITE_CALCOM_USERNAME=mindfulqalb
VITE_CALCOM_EVENT_TYPE_IDS={}

# ===== MOCK/TEST MODE =====
VITE_USE_MOCK_AVAILABILITY=true

# ===== NOTES =====
# For production:
# 1. Deploy the backend (see backend/ folder)
# 2. Set VITE_USE_BACKEND_API=true
# 3. Set VITE_BACKEND_URL to your backend URL
# 4. Remove VITE_CALCOM_API_KEY (it should only be on backend)
